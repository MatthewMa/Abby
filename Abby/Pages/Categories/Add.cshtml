@page
@model AbbyWeb.Pages.Categories.AddModel
<div class="container p-2">    
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Add Category</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="Category.Name">Name:</label>
                <input class="form-control" asp-for="Category.Name"/>
            </div>
            <div class="mb-3">
                <label asp-for="Category.DisplayOrder">Display Order:</label>
                <input type="number" class="form-control" asp-for="Category.DisplayOrder"/>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3 ml-4" style="width: 40%">Create</button>
    </form>
</div>
